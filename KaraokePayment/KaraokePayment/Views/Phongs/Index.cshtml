@model IEnumerable<KaraokePayment.Data.Entity.Phong>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <!-- ds phòng -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-11">
                                    <h3 class="card-title" style="font-size:20px">Danh sach phong</h3>
                                </div>
                                <div class="col-md-1">
                                    <a asp-action="Create" class="btn btn-default">Thêm mới</a>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TenPhong)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CoPhong)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsVIP)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Gia)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TrangThai)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenPhong)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CoPhong)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsVIP)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Gia)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TrangThai)
                                            </td>
                                            <td>
                                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Sửa
                                                </a>
                                                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="fas fa-folder">
                                                    </i>
                                                    Chi tiết
                                                </a>
                                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Xóa
                                                </a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>