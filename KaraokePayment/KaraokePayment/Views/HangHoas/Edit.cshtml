@model KaraokePayment.Data.Entity.HangHoa

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = $"{Model.Ten}/{Model.HangHoaImage}";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <!-- ds phòng -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-11">
                                    <h3 class="card-title" style="font-size:20px">Them moi Hang Hoa</h3>
                                </div>
                                <div class="col-md-1">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <form asp-action="Edit" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Id" />
                                        <div class="form-group">
                                            <label asp-for="MaHH" class="control-label"></label>
                                            <input asp-for="MaHH" class="form-control" />
                                            <span asp-validation-for="MaHH" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @if (string.IsNullOrEmpty(Model.HangHoaImage))
                                            {
                                                <img src="~/Karaoke-assest/Images/ProductDefaultImage.png" style="width:250px;height:250px;" class="xx" alt="ProductDefaultImage" />
                                            }
                                            else
                                            {
                                                <img src="~/Karaoke-assest/Images/HangHoas/@url" style="width:250px;height:250px;" class="xx" alt="@Model.Ten" />

                                            }
                                            <input asp-for="ImageFile" accept="images/*" id="InImage" />
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Ten" class="control-label"></label>
                                            <input asp-for="Ten" class="form-control" />
                                            <span asp-validation-for="Ten" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="SoLuong" class="control-label"></label>
                                            <input asp-for="SoLuong" class="form-control" />
                                            <span asp-validation-for="SoLuong" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Gia" class="control-label"></label>
                                            <input asp-for="Gia" class="form-control" />
                                            <span asp-validation-for="Gia" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="NgayNhap" class="control-label"></label>
                                            <input asp-for="NgayNhap" class="form-control" />
                                            <span asp-validation-for="NgayNhap" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="HanSuDung" class="control-label"></label>
                                            <input asp-for="HanSuDung" class="form-control" />
                                            <span asp-validation-for="HanSuDung" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div>
                                <a asp-action="Index">Back to List</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
